{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"include": ["./src/**/*.ts"],
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	}
}
